                            android:id="@+id/textView12pm"
                            style="@style/HourOfDays"
                            android:layout_marginBottom="1dp"
                            android:gravity="center_horizontal"
                            android:text="12 PM" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textView1pm"
                            style="@style/HourOfDays"
                            android:layout_marginBottom="1dp"
                            android:gravity="center_horizontal"
                            android:text="1 PM" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textView2pm"
                            style="@style/HourOfDays"
                            android:layout_marginBottom="1dp"
