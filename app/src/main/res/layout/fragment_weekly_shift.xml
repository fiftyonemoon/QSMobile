                                android:layout_height="fill_parent"
                                android:background="@color/border" />

                            <RelativeLayout
                                android:id="@+id/rel_saturday"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2">

