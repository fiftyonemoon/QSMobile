        android:text="M" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/DayOfTheWeek"
        android:layout_weight="1"
        android:tag="dayOfWeek3"
        android:text="T" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/DayOfTheWeek"
        android:layout_weight="1"
        android:tag="dayOfWeek4"
        android:text="W" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/DayOfTheWeek"
        android:layout_weight="1"
        android:tag="dayOfWeek5"
        android:text="T" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/DayOfTheWeek"
        android:layout_weight="1"
        android:tag="dayOfWeek6"
        android:text="F" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/DayOfTheWeek"
        android:layout_weight="1"
